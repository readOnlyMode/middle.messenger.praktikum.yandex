<form action="" class="form">
    <h4 class="form__description">{{description}}</h4>

    <ul class="form__inputs"></ul>
        {{#each inputElements}}
            <li class="form__input">{{>inputPartial this}}</li>
        {{/each}}
    </ul>

    <div class="form__footer">
        {{>buttonPartial this.buttonElement}}

        {{>linkPartial this.linkElement}}
    </div>
</form>